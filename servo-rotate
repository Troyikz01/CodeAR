#include <Servo.h>

#define TRIG_PIN 4
#define ECHO_PIN 7
#define SERVO_PIN 3

Servo myServo;

// Define positions
const int CENTER = 90;      // default middle
const int LEFT_LIMIT = 45;  // left boundary
const int RIGHT_LIMIT = 135; // right boundary

void setup() {
  Serial.begin(9600);
  pinMode(TRIG_PIN, OUTPUT);
  pinMode(ECHO_PIN, INPUT);

  myServo.attach(SERVO_PIN);

  // Start at center
  myServo.write(CENTER);
  Serial.println("Servo starting at CENTER position...");
  delay(500); // small pause to reach center
}

long readDistance() {
  digitalWrite(TRIG_PIN, LOW);
  delayMicroseconds(2);
  digitalWrite(TRIG_PIN, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG_PIN, LOW);

  long duration = pulseIn(ECHO_PIN, HIGH);
  long distance = duration * 0.034 / 2; // cm
  return distance;
}

void loop() {
  // Sweep LEFT to RIGHT
  myServo.write(LEFT_LIMIT);   // jump instantly
  delay(300);                  // give servo time to reach left
  Serial.print("Distance at LEFT: ");
  Serial.println(readDistance());

  myServo.write(RIGHT_LIMIT);  // jump instantly
  delay(300);                  // give servo time to reach right
  Serial.print("Distance at RIGHT: ");
  Serial.println(readDistance());

  // Repeat sweep
}
