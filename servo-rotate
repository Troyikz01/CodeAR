#include <Servo.h>

// --- Ultrasonic Sensor Pins ---
#define TRIG_PIN 4
#define ECHO_PIN 7

// --- Servo Pin ---
#define SERVO_PIN 3

Servo myServo;

void setup() {
  Serial.begin(9600);

  pinMode(TRIG_PIN, OUTPUT);
  pinMode(ECHO_PIN, INPUT);

  myServo.attach(SERVO_PIN);
  myServo.write(90); // start at center
}

long readDistance() {
  digitalWrite(TRIG_PIN, LOW);
  delayMicroseconds(2);
  digitalWrite(TRIG_PIN, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG_PIN, LOW);

  long duration = pulseIn(ECHO_PIN, HIGH);
  long distance = duration * 0.034 / 2; // cm
  return distance;
}

void loop() {
  // Sweep servo left to right quickly
  for (int angle = 0; angle <= 180; angle += 5) { // step 5Â° for faster sweep
    myServo.write(angle);
    long distance = readDistance();
    Serial.print("Angle: ");
    Serial.print(angle);
    Serial.print(" | Distance: ");
    Serial.print(distance);
    Serial.println(" cm");
    delay(25); // small delay: safe fast speed
  }

  // Sweep servo right to left quickly
  for (int angle = 180; angle >= 0; angle -= 5) {
    myServo.write(angle);
    long distance = readDistance();
    Serial.print("Angle: ");
    Serial.print(angle);
    Serial.print(" | Distance: ");
    Serial.print(distance);
    Serial.println(" cm");
    delay(25);
  }
}
